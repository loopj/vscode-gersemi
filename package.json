{
	"name": "vscode-gersemi",
	"displayName": "Gersemi CMake Formatter",
	"description": "Format CMakeLists.txt and .cmake files using gersemi.",
	"version": "0.9.0",
	"publisher": "loopj",
	"author": {
		"name": "James Smith",
		"url": "https://github.com/loopj"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/loopj/vscode-gersemi.git"
	},
	"bugs": {
		"url": "https://github.com/loopj/vscode-gersemi/issues"
	},
	"homepage": "https://github.com/loopj/vscode-gersemi",
	"engines": {
		"vscode": "^1.86.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:cmake"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "cmake",
				"extensions": [
					".cmake",
					".cmake.in"
				],
				"filenames": [
					"CMakeLists.txt"
				]
			}
		],
		"commands": [
			{
				"command": "gersemi.formatDocument",
				"title": "Gersemi: Format Document"
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"vscode:prepublish": "npm run compile"
	},
	"devDependencies": {
		"@types/node": "^22.15.29",
		"@types/vscode": "^1.86.0",
		"typescript": "^5.8.3"
	}
}
